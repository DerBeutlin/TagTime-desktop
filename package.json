{
  "name": "TagTime-desktop",
  "description": "Time tracking for space cadets - desktop edition",
  "version": "0.1.0",
  "license": "ISC",
  "author": "Michael Macnair",
  "repository": {
    "type": "git",
    "url": "git://github.com/mykter/TagTime-desktop.git"
  },
  "main": "src/main.js",
  "dependencies": {
    "configstore": "^3.0.0",
    "electron-main-notification": "^1.0.0",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "random-js": "^1.0.8",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "electron": "^1.4.15",
    "electron-builder": "^14.5.3",
    "electron-mocha": "^3.3.0",
    "google-closure-compiler": "20170124.0.0",
    "ps-tree": "^1.1.0",
    "should": "^11.2.0",
    "sinon": "^1.17.7",
    "spectron": "^3.6.0",
    "stats-lite": "^2.0.3",
    "tmp": "0.0.31",
    "xvfb-maybe": "^0.1.3"
